    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python Debugger: train.py",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/train.py",
            "console": "integratedTerminal",
            "args": "--model cvae --latent_dim_to_gt --kld_weight 0.01 --workers 1 --batch_size 10 --samples 100 --n_nodes 4 --n_producers 2 --n_consumers 2"
        }
    ]
}